<div class="container text-white">
  <h2>All Posts</h2>
  <div class="table-responsive ">          
  <table class="table" id="data">
    <thead>
      <tr>
        <!-- <th>ID</th> -->
        <th>Title</th>
        <th>Description</th>
        <th>Image</th>
        <th>Published On</th>
        <!-- <th>Action</th> -->
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <!-- <td><%#= post.id %></td> -->
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= image_tag(post.image, width: 600, height: 400) if post.image %></td>
        <td><%= post.updated_at.strftime("%B %d, %Y")%></td>
        <!-- <td colspan="2"><%#= link_to "Show", post_path(post)%></td> -->
       <!--  <td><%#= link_to "Edit", edit_post_path(post)%></td>
        <td><%#= link_to "Delete", post_path(post), method: :delete %></td> -->
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <%= link_to "New Post", new_post_path %>
</div>
<script type="text/javascript">
var counter=0;
var total = '<%= @counter %>';
 function recursively_ajax()
{
$.ajax({
        type:"get",
        // async:false, // set async false to wait for previous response
        url: "/",
        data:{counter:counter},
        success: function(data)
        {   $("#data tbody").append(data);
            counter++;
            if(counter < total){
                recursively_ajax();
            }
        }
    });
 }      
 recursively_ajax();  
</script>



